<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/linearLayout4"
            android:divider="?android:listDivider"
            android:dividerPadding="2dp"
            android:orientation="horizontal"
            android:background="#009999"
            android:showDividers="middle"
            android:weightSum="2"

          >

            <Button
                android:id="@+id/butnsave"
                android:textColor="#FFFFFF"
                android:layout_width="161dp"
                android:background="#009999"
                android:layout_marginTop="0dp"
                android:layout_height="match_parent"
                android:text="Save" />

           <Button
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:background="#009999"
            android:layout_marginTop="0dp"
            android:text="Cancel"
            android:id="@+id/buttoncancel" />


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout5"
        android:weightSum="1">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/devicegroupname"
        android:text="DEVICE NAME"
        android:textSize="32sp"
            android:gravity="center"
        android:layout_weight="1" />

        <Switch
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout1">
        <EditText android:layout_width="wrap_content"
            android:layout_height="60dp" android:layout_weight="0.80"
            android:id="@+id/txtDate">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:background="#009999"
            android:id="@+id/btnCalendar" android:text="Date"
            android:layout_width="74dp"></Button>
    </LinearLayout>0
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/linearLayout2">
        <EditText android:layout_width="wrap_content"
            android:layout_height="60dp" android:layout_weight="1"
            android:id="@+id/txtTime">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:background="#009999"
            android:id="@+id/btnTimePicker"
            android:text="Time" android:layout_width="74dp"></Button>
    </LinearLayout>


    <ListView
        android:id="@+id/list1"
        android:layout_width="366dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/butn"></ListView>

</LinearLayout>

